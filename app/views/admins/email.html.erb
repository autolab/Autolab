<h2>Send a Bulk Email to Your Class</h2>

<% if @errors then %>
  <font color=red><%=@errors %></font>
<% elsif @email then %>
  <font color=green>Success!</font>
  <pre><%= @email.encoded %></pre>
<% else %>
  <% if Rails.env == "development" then %>
    <font color=red><b>WARNING: Rails is in development mode right now, 
    so you're probably not in AFS, you NEED to be in AFS for this interface 
    to work!!!!</b></font><br>
  <% end %>
  <%
  sections = @course.course_user_data.select("section").group("section")
  sectionSelect = sections.collect {|p| [ p.section ,p.section ]}
  sectionSelect.insert(0,["Entire Course",""])
  %>

  <%= form_tag :action=>"email" do %>
  <table class=verticalTable >
    <tr>
      <th><b> From: </b></th>
      <td><%= text_field_tag :from %></td>
      <td class=smallText>This will be the from and reply-to address,
      so it should be legitimate</td>
    </tr>
    <tr>
      <th><b> Subject:</b></th>
      <td><%= text_field_tag :subject %></td>
    </tr>
    <tr>
      <th><b>Section:</b></th>
      <td><%= select("","section",sectionSelect) %></td>
    </tr>
    <tr>
      <td colspan=2>
      <%= text_area_tag :body,nil,{:rows=>15,:cols=>50}%>
      </td>
    </tr>
    <tr>
      <td colspan=2>
      <br>
      <%= submit_tag "Send Email",:confirm=>"Are you sure?", :class=>"btn primary" %>
      </td>
    </tr>
  </table>
  <% end %>
<% end %>
