<% @title = "Take Quiz" %>

<h2>Quiz</h2>
<%= @score %>
<form method="POST" action="<%= @submitPath %>">

  <% @quizData.each do |i, q| %>
    <h4><%= q["question"] %></h4>
    <% q.keys.shuffle.each do |key| %>
      <% if key != "question" && key != "answer" %>
        <input type="radio" name="<%= i %>" value="<%= key %>" required> <%= q[key] %><br />
      <% end %>
    <% end %>
  <% end %>
  <input id="submit" type="submit" value="Submit" class="btn primary" style="margin-top:20px;">
</form>
