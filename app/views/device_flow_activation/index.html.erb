<% @title = "Activate Client" %>

<% content_for :stylesheets do %>
  <style type="text/css">
    input[type="text"]#user_code {
      font-family: monospace;
      font-size: 24px;
    }
  </style>
<% end %>

<div class="row">
  <div class="col s12">
    <h2>Activate API Client</h2>

    <%= form_tag(device_flow_resolve_path, method: "get") do |f| %>
      <p>Enter 6-digit code</p>
      <%= text_field_tag :user_code, nil, :max_length => 6, :autocomplete => :off %>
      <%= submit_tag "Activate", :class=>"btn primary" %>
    <% end %>
  </div>
</div>