<h2>Link a Course with '<%= @launch_context["https://purl.imsglobal.org/spec/lti/claim/context"]["title"] %>'</h2>

<% @listing.each do |category, list| %>
  <% if list.size > 0 %>
    <div class="section">
      <h3 class="section-title"><span class="white"><%= category.capitalize %></span></h3>

      <div class="row">
        <% list.each_with_index do |course, idx| %>
          <% if idx % 3 == 0 %>
            <div class="clearfix hide-on-small-only"></div>
          <% end %>

          <% context_id = @launch_context["https://purl.imsglobal.org/spec/lti/claim/context"]["id"] %>
          <% membership_url = @launch_context["https://purl.imsglobal.org/spec/lti-nrps/claim/namesroleservice"]["context_memberships_url"] %>
          <div class="col s12 m4">
            <div class="card hoverable">
              <%= link_to lti_link_user_path(context_id: context_id, course_id: course.id, membership_url: membership_url) do %>
                <div class="card-content red darken-4">
                  <div class="row">
                    <div class="col s9"><h4><span class="card-title white-text"><%= course.full_name %></span></h4></div>
                    <div class="col s3"><span class="new badge padded-badge" data-badge-caption="Instructor"></span></div>
                  </div>
                </div>
            <% end %>
            </div>
          </div>

        <% end %>
      </div>

    </div> <!-- section -->
  <% end %>
<% end %>

<%= render partial: "home/topannounce" rescue nil %>
