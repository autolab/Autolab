<h4> LTI Linking </h4>
<h4><%= @user.display_name %></h4>
<ul class="gray-box">
  <li>
    <b> Information from LTI resource </b>
    <ul> Course title: <%= @course_title %></ul>
    <ul> Course memberships url: <%= @course_memberships_url%></ul>
  </li>
  <li>
    <b>
      Linkable courses
    </b>
    <% if @cuds.empty? %>
      <strong> None </strong>
    <% else %>
      <ul>
        <% @cuds.each do |cud| %>
          <li><%= button_to "link "+cud.course.display_name, controller: :users, action: :lti_launch_link_course,
                          :membership_url => @course_memberships_url,
                          :selectedCud => cud, method: :post
          %></li>
        <% end %>
      </ul>
    <% end %>
  </li>
</ul>
