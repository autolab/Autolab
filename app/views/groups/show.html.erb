<h1>Group: <%= @group.name %></h1>

<% if @aud.group_id == @group.id && !@aud.group_confirmed then %>
  <p>You have not confirmed your group yet.</p>
  <%= form_for [@course, @assessment, @group], method: :patch do |f| %>
    <%= hidden_field_tag :addMember, @cud.id %>
    <%= hidden_field_tag :confirmed, true %>
    <%= f.submit "Confirm" %>
  <% end %>
  <%= form_for [@course, @assessment, @group], method: :patch do |f| %>
    <%= hidden_field_tag :removeMember, @cud.id %>
    <%= f.submit "Leave Group" %>
  <% end %>
<% end %>

<h2>Group Members</h2>
<ul>
<% @group.assessment_user_data.each do |aud| %>
  <li>
    <% cud = aud.course_user_datum %>
    <%= cud.email %>
    <% unless aud.group_confirmed then %>
      (Not Confirmed)
    <% end %>
  </li>
<% end %>
</ul>

<%= link_to 'Change Name', [:edit, @course, @assessment, @group] %> | <%= groups_back_link %>
