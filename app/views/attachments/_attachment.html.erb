<li class="attachment">
  <% if attachment.assessment.nil? then %>
    <a href="<%= url_for [@course, attachment] %>" class="glyphicon glyphicon-folder-open" aria-hidden="true"></a>
  <% else %>
    <a href="<%= url_for [@course, attachment.assessment, attachment] %>" class="glyphicon glyphicon-folder-open" aria-hidden="true"></a>
  <% end %>
  
  <% if attachment.assessment.nil? then %>
    <%= link_to attachment.name, [@course, attachment] %>
  <% else %>
    <%= link_to attachment.name, [@course, attachment.assessment, attachment] %>
  <% end %>

  <% if !attachment.assessment.nil? and @assessment.nil? then %>
    (<%= attachment.assessment.display_name %>)
  <% end %>

  <span class="pull-right">
  <% if @cud.instructor? then %>
    <% if attachment.assessment.nil? then %>
      <%= link_to 'Edit', [:edit, @course, attachment] %>
      <%= link_to 'Delete', [@course, attachment], method: :delete %>
    <% else %>
      <%= link_to 'Edit', [:edit, @course, attachment.assessment, attachment], { class:"btn small"} %>
      <%= link_to 'Delete', [@course, attachment.assessment, attachment], {method: :delete, class:"btn small"} %>
    <% end %>
  <% end %>
  </span>
</li>
