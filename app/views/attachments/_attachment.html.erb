<li class="attachment">
  <% if attachment.assessment.nil? then %>
    <%= link_to [@course, attachment] do %>
      <span class="glyphicon glyphicon-list-alt"></span><%= attachment.name %>
    <% end %>
  <% else %>
    <%= link_to [@course, attachment.assessment, attachment] do %>
      <span class="glyphicon glyphicon-list-alt"></span><%= attachment.name %>
    <% end %>
  <% end %>

  <% if !attachment.assessment.nil? && @assessment.nil? then %>
    (<%= attachment.assessment.display_name %>)
  <% end %>

  <span class="pull-right">
  <% if @cud.instructor? then %>
    <% if attachment.assessment.nil? then %>
      <%= link_to 'Edit', [:edit, @course, attachment], {class:"btn small"} %>
      <%= link_to 'Delete', [@course, attachment], {method: :delete, class:"btn small"} %>
    <% else %>
      <%= link_to 'Edit', [:edit, @course, attachment.assessment, attachment], {class:"btn small"} %>
      <%= link_to 'Delete', [@course, attachment.assessment, attachment], {method: :delete, class:"btn small"} %>
    <% end %>
  <% end %>
  </span>
</li>
