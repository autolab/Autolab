<% content_for :javascripts do %>
  <%= javascript_include_tag "initialize_datetimepickers" %>
<% end %>
<h4>Editing scheduler</h4>

<%= form_for :scheduler, url: { action: "update" }, method: "patch", builder: FormBuilderWithDateTimeInput do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :action, placeholder: "(scheduler action)" %>
  <%= f.datetime_select :next, step: 1 %>
  <%= f.number_field :interval, min: 1, placeholder: "(in seconds)" %>
  <div class="action_buttons">
    <%= link_to 'Back', { action: "index" }, { class: "btn" } %>
    <%= f.submit "Update", { class: "btn" } %>
  </div>
<% end %>
